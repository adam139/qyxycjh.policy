<?xml version="1.0"?>
<rolemap>
  <roles>  
	<role name="Organization"/>
	<role name="Sponsor"/>
  </roles>
  <permissions>
    <permission name="qyxycjh.policy:Add anual report" acquire="False">
    	<role name="Organization"/>
		<role name="Site Administrator"/>
		<role name="Manager"/>
	</permission>
    <permission name="qyxycjh.policy:Review anual report" acquire="False">
    	<role name="Sponsor"/>
		<role name="Site Administrator"/>
		<role name="Manager"/>
	</permission>	
	<permission name="Add portal content" acquire="False">
		<role name="Member"/>
		<role name="Site Administrator"/>
	    <role name="Organization"/>
		<role name="Manager"/>
	</permission>	
	    <!-- This disables the dashboard for regular members -->
    <permission name="Portlets: Manage own portlets" acquire="False">
        <role name="Manager" />
        <role name="Member" />
    </permission>
    <!-- This allows anonymous visitors to register for the site  -->
    <permission name="Add portal member" acquire="False">
        <role name="Manager" />
        <role name="Anonymous" />
    </permission>
  </permissions>
 </rolemap>
